<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">


    <context:property-placeholder location="classpath:musicPlayer.properties"/>

    <bean id="classicalMusicBean"
          class="ru.shvetsov.spring.ClassicalMusic"
          init-method="myInitMethod"
          destroy-method="myDestroyMethod"
          factory-method="getInstance">
    </bean>

    <bean id="rockMusicBean"
          class="ru.shvetsov.spring.RockMusic"
          init-method="myInitMethod"
          destroy-method="myDestroyMethod"
          factory-method="getInstance">
    </bean>

    <bean id="popMusicBean"
          class="ru.shvetsov.spring.PopMusic"
          init-method="myInitMethod"
          destroy-method="myDestroyMethod"
          factory-method="getInstance">
    </bean>

    <bean id="musicPlayer"
          class="ru.shvetsov.spring.MusicPlayer"
          scope="prototype">

        <property name="musicList">
            <list>
                <ref bean="classicalMusicBean"/>
                <ref bean="rockMusicBean"/>
                <ref bean="popMusicBean"/>
            </list>
        </property>

        <property name="name" value="${musicPlayer.name}"/>
        <property name="volume" value="${musicPlayer.volume}"/>
    </bean>


</beans>